<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>

<?import javafx.scene.Scene?>

<fx:root type="javafx.stage.Stage" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1"
         title="Duke" minWidth="400" minHeight="600" onCloseRequest="#handleExit">
    <scene>
        <Scene>
            <AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="400.0">
                <children>
                    <TextField fx:id="userInput" layoutY="558.0" onAction="#handleUserInput" prefHeight="41.0" prefWidth="324.0" AnchorPane.bottomAnchor="1.0" />
                    <Button fx:id="sendButton" layoutX="362.0" layoutY="558.0" mnemonicParsing="false" onAction="#handleUserInput" prefHeight="41.0" prefWidth="22.0">
                        <graphic>
                            <ImageView fitHeight="33.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@/images/send-message-button.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="sendImageButton" layoutX="324.0" layoutY="558.0" mnemonicParsing="false" onAction="#handleUserImageInput" prefHeight="41.0" prefWidth="22.0">
                        <graphic>
                            <ImageView fitHeight="33.0" fitWidth="22.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@/images/file.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" hvalue="1.0" prefHeight="557.0" prefWidth="400.0" vvalue="1.0">
                        <content>
                            <VBox fx:id="dialogContainer" prefHeight="552.0" prefWidth="388.0" />
                        </content>
                    </ScrollPane>
                </children>
            </AnchorPane>
        </Scene>
    </scene>
</fx:root>